<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/screen_padding">

            <com.syas.jbolt.views.FontTextView
                style="@style/big_heading"
                android:text="@string/apperance" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_with_bottom_margin"
                android:text="@string/preferred_height"
                android:id="@+id/preferredHeightTextView" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_with_bottom_margin"
                android:text="@string/body_type_perfect_match"
                android:id="@+id/preferredBodyTypeTextView" />
        </LinearLayout>

        <View
            style="@style/yellow_border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/screen_padding">

            <com.syas.jbolt.views.FontTextView
                style="@style/big_heading"
                android:text="@string/background_and_lifestyle" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_with_bottom_margin"
                android:text="@string/preferred_marital_status_perfect_match"
                android:id="@+id/preferredMaritalStatusTextView" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_with_bottom_margin"
                android:text="@string/has_children"
                android:id="@+id/hasChildrenTextView" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_with_bottom_margin"
                android:text="@string/preferred_smoking_habits_perfect_match"
                android:id="@+id/smokingHabitsTextView" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_with_bottom_margin"
                android:text="@string/ethnicity_perfect_match"
                android:id="@+id/ethnicityPerfectTextView" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_with_bottom_margin"
                android:text="@string/cultural_background_perfect_match"
                android:id="@+id/culturePerfectTextView" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_with_bottom_margin"
                android:text="@string/move_to_israel_perfect_match"
                android:id="@+id/preferredIsraelTextView" />
        </LinearLayout>

        <View
            style="@style/yellow_border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/screen_padding">

            <com.syas.jbolt.views.FontTextView
                style="@style/big_heading"
                android:text="@string/education" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_with_bottom_margin"
                android:text="@string/minimum_education_perfect_match"
                android:id="@+id/minimumEducationTextView" />
        </LinearLayout>

        <View
            style="@style/yellow_border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/screen_padding">

            <com.syas.jbolt.views.FontTextView
                style="@style/big_heading"
                android:text="@string/religious_observance" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_with_bottom_margin"
                android:text="@string/religious_orientation_perfect_match"
                android:id="@+id/religiousOrientationTextView" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_with_bottom_margin"
                android:text="@string/kosher_observance_perfect_match"
                android:id="@+id/kosherObservanceTextView" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_with_bottom_margin"
                android:text="@string/dress_perfect_match"
                android:id="@+id/dressPerfectTextView" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_with_bottom_margin"
                android:text="@string/hair_cover_perfect_match"
                android:id="@+id/hairCoverPerfectTextView" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_with_bottom_margin"
                android:text="@string/torah_study_perfect_match"
                android:id="@+id/torahStudyTextView" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_with_bottom_margin"
                android:text="@string/ok_baal_teshuva"
                android:id="@+id/baalPerfectTextView" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>