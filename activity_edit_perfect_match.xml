<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:slider="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPerfectMatchActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.syas.jbolt.views.FontTextView
            style="@style/top_heading"
            android:text="@string/edit_perfect_match_top_info" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/screen_padding">

            <com.syas.jbolt.views.FontTextView
                style="@style/big_heading"
                android:text="@string/apperance" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.syas.jbolt.views.FontTextView
                    style="@style/small_heading"
                    android:layout_weight="9"
                    android:text="@string/preferred_height_range" />

                <com.syas.jbolt.views.FontTextView
                    style="@style/small_heading_black_weight_less"
                    android:text="@string/initial_height_range"
                    android:id="@+id/heightRangeTextView" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <com.syas.jbolt.views.DoubleSlider
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                slider:minValue="19"
                slider:maxValue="98"
                slider:left_color="@color/login_background"
                slider:right_color="@color/login_background"
                slider:radius="17dp"
                android:id="@+id/preferredHeightSlider" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/screen_padding">

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading"
                android:text="@string/preferred_body_type" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/edit_profile_margin_bottom">

                <com.syas.jbolt.views.FontTextView
                    style="@style/holder_text_view_in_perfect_match"
                    android:id="@+id/preferredBodyTextView" />

                <ImageButton
                    style="@style/add_button"
                    android:id="@+id/addPreferredBodyButton" />
            </LinearLayout>

            <com.syas.jbolt.views.FontTextView
                style="@style/big_heading"
                android:text="@string/background_and_lifestyle" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading"
                android:text="@string/preferred_marital_status" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/edit_profile_margin_bottom">

                <com.syas.jbolt.views.FontTextView
                    style="@style/holder_text_view_in_perfect_match"
                    android:id="@+id/preferredMaritalTextView" />

                <ImageButton
                    style="@style/add_button"
                    android:id="@+id/addPreferredMaritalButton" />
            </LinearLayout>

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading"
                android:text="@string/has_children" />

            <Spinner
                style="@style/spinner"
                android:id="@+id/hasChildrenSpinner" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading"
                android:text="@string/preferred_smoking_habits" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/edit_profile_margin_bottom">

                <com.syas.jbolt.views.FontTextView
                    style="@style/holder_text_view_in_perfect_match"
                    android:id="@+id/preferredSmokingTextView" />

                <ImageButton
                    style="@style/add_button"
                    android:id="@+id/addPreferredSmokingButton" />
            </LinearLayout>

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading"
                android:text="@string/preferred_ethnicity" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/edit_profile_margin_bottom">

                <com.syas.jbolt.views.FontTextView
                    style="@style/holder_text_view_in_perfect_match"
                    android:id="@+id/preferredEthnicityTextView" />

                <ImageButton
                    style="@style/add_button"
                    android:id="@+id/addPreferredEthnicityButton" />
            </LinearLayout>

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading"
                android:text="@string/preferred_cultural_background" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/edit_profile_margin_bottom">

                <com.syas.jbolt.views.FontTextView
                    style="@style/holder_text_view_in_perfect_match"
                    android:id="@+id/preferredCultureTextView" />

                <ImageButton
                    style="@style/add_button"
                    android:id="@+id/addPreferredCultureButton" />
            </LinearLayout>

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading"
                android:text="@string/move_to_israel_response" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/edit_profile_margin_bottom">

                <com.syas.jbolt.views.FontTextView
                    style="@style/holder_text_view_in_perfect_match"
                    android:id="@+id/israelResponseTextView" />

                <ImageButton
                    style="@style/add_button"
                    android:id="@+id/israelResponseButton" />
            </LinearLayout>

            <com.syas.jbolt.views.FontTextView
                style="@style/big_heading"
                android:text="@string/education" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading"
                android:text="@string/minimum_education_level" />

            <Spinner
                style="@style/spinner"
                android:id="@+id/minimumEducationLevelSpinner" />

            <com.syas.jbolt.views.FontTextView
                style="@style/big_heading"
                android:text="@string/religious_observance" />

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading"
                android:text="@string/preferred_religious_orientation" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/edit_profile_margin_bottom">

                <com.syas.jbolt.views.FontTextView
                    style="@style/holder_text_view_in_perfect_match"
                    android:id="@+id/preferredReligionTextView" />

                <ImageButton
                    style="@style/add_button"
                    android:id="@+id/addPreferredReligionButton" />
            </LinearLayout>

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading"
                android:text="@string/preferred_kosher_observance" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/edit_profile_margin_bottom">

                <com.syas.jbolt.views.FontTextView
                    style="@style/holder_text_view_in_perfect_match"
                    android:id="@+id/preferredKosherTextView" />

                <ImageButton
                    style="@style/add_button"
                    android:id="@+id/addPreferredKosherButton" />
            </LinearLayout>

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading"
                android:text="@string/preferred_dress"
                android:visibility="gone"
                android:id="@+id/preferredDressTextView"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/edit_profile_margin_bottom">

                <com.syas.jbolt.views.FontTextView
                    style="@style/holder_text_view_in_perfect_match"
                    android:visibility="gone"
                    android:id="@+id/preferredDressHolderTextView" />

                <ImageButton
                    style="@style/add_button"
                    android:visibility="gone"
                    android:id="@+id/addPreferredDressButton" />
            </LinearLayout>

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading"
                android:text="@string/hair_covering_of_match"
                android:visibility="gone"
                android:id="@+id/preferredHairCoverTextView"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/edit_profile_margin_bottom">

                <com.syas.jbolt.views.FontTextView
                    style="@style/holder_text_view_in_perfect_match"
                    android:visibility="gone"
                    android:id="@+id/preferredHairCoverHolderTextView" />

                <ImageButton
                    style="@style/add_button"
                    android:visibility="gone"
                    android:id="@+id/addPreferredHairCoverButton" />
            </LinearLayout>

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading"
                android:text="@string/frequency_of_torah_study"
                android:visibility="gone"
                android:id="@+id/preferredTorahStudyTextView"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/edit_profile_margin_bottom">

                <com.syas.jbolt.views.FontTextView
                    style="@style/holder_text_view_in_perfect_match"
                    android:visibility="gone"
                    android:id="@+id/preferredTorahStudyHolderTextView" />

                <ImageButton
                    style="@style/add_button"
                    android:visibility="gone"
                    android:id="@+id/addPreferredTorahStudyButton" />
            </LinearLayout>

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading"
                android:text="@string/ok_baal_teshuva"
                android:id="@+id/okDatingBaalTeshuvaTextView"/>

            <Spinner
                style="@style/spinner"
                android:id="@+id/okDatingBaalTeshuvaSpinner" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>