<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/medium_grey">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <com.syas.jbolt.views.FontTextView
            style="@style/small_heading_grey"
            android:text="@string/push_notifications" />

        <LinearLayout
            style="@style/linear_layout_horizontal_with_padding"
            android:paddingBottom="10dp">

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_black_weight_more"
                android:text="@string/notify_me_when_friends_are_liked"
                android:layout_weight="2"/>

            <Switch
                style="@style/weight_less"
                android:layout_width="fill_parent"
                android:layout_weight="3"
                android:id="@+id/notifyMeSwitch"/>
        </LinearLayout>

        <View
            style="@style/border" />

        <LinearLayout
            style="@style/linear_layout_horizontal_with_padding">

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_black_weight_more"
                android:text="@string/new_matches" />

            <Switch
                style="@style/weight_less"
                android:id="@+id/newMatchesSwitch" />
        </LinearLayout>

        <View
            style="@style/border" />

        <LinearLayout
            style="@style/linear_layout_horizontal_with_padding">

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_black_weight_more"
                android:text="@string/messages" />

            <Switch
                style="@style/weight_less"
                android:id="@+id/messagesSwitch" />
        </LinearLayout>

        <View
            style="@style/border" />

        <LinearLayout
            style="@style/linear_layout_horizontal_with_padding">

            <com.syas.jbolt.views.FontTextView
                style="@style/small_heading_black_weight_more"
                android:text="@string/in_app_vibrations" />

            <Switch
                style="@style/weight_less"
                android:id="@+id/vibrationsSwitch" />
        </LinearLayout>

        <com.syas.jbolt.views.FontTextView
            style="@style/small_heading_grey"
            android:text="@string/link" />

        <Button
            style="@style/button"
            android:text="@string/import_data"
            android:id="@+id/importDataButton" />

        <View
            style="@style/border" />

        <Button
            style="@style/button"
            android:text="@string/partner_site"
            android:id="@+id/partnerButton" />

        <com.syas.jbolt.views.FontTextView
            style="@style/small_heading_grey"
            android:text="@string/contact_us" />

        <Button
            style="@style/button"
            android:text="@string/report_issue"
            android:id="@+id/reportIssueButton" />

        <View
            style="@style/border" />

        <Button
            style="@style/button"
            android:text="@string/feedback"
            android:id="@+id/feedbackButton" />

        <View
            style="@style/border" />

        <Button
            style="@style/button"
            android:text="@string/affiliate_with_us"
            android:id="@+id/affiliateButton" />

        <com.syas.jbolt.views.FontTextView
            style="@style/small_heading_grey"
            android:text="@string/legal_stuff" />

        <Button
            style="@style/button"
            android:text="@string/privacy_policy"
            android:id="@+id/privacyButton" />

        <View
            style="@style/border" />

        <Button
            style="@style/button"
            android:text="@string/terms_of_service"
            android:id="@+id/termsButton" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/medium_grey">

            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/logOut"
                style="@style/green_rounded_button"
                android:layout_width="fill_parent"
                android:text="@string/log_out"
                android:layout_weight="1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
